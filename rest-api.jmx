          <JSR223Assertion guiclass="TestBeanGUI" testclass="JSR223Assertion" testname="JSR223 Assertion" enabled="true">
            <stringProp name="cacheKey">true</stringProp>
            <stringProp name="filename"></stringProp>
            <stringProp name="parameters"></stringProp>
            <stringProp name="script">import groovy.json.JsonSlurper;
import org.apache.jmeter.engine.util.CompoundVariable;

def failureMessage = &quot;&quot;;
def jsonResponse = null;

JsonSlurper JSON = new JsonSlurper();

// Check if the response is a valid JSON
try {
	jsonResponse = JSON.parseText(prev.getResponseDataAsString());
} catch (Exception e) {
	failureMessage += &quot;Invalid JSON.\n&quot;
}

// Check if the JSON response matches with the saved assertion
if(!vars.get(&quot;assertion&quot;).equals(&quot;&quot;)) {
	def assertion = new CompoundVariable(new File(vars.get(&quot;jmeter.test.home&quot;) + vars.get(&quot;assertion&quot;)).text).execute();

	try {
		def jsonAssertion = JSON.parseText(assertion);
		if (jsonResponse != jsonAssertion) { throw new Exception() }
	} catch (Exception e) {
		failureMessage += &quot;Invalid response.\n&quot;
	}
}

// Print error messages if any
if (failureMessage?.trim()) {
	failureMessage += &quot;JSON RESPONSE: &quot; + jsonResponse + &quot;\n\n&quot;;

	AssertionResult.setFailureMessage(failureMessage);
	AssertionResult.setFailure(true);    
}</stringProp>
